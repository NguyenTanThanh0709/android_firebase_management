<!-- custom_sort_dialog.xml -->
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RadioButton
        android:id="@+id/radioButtonSortByName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xắp sếp theo tên"/>

    <RadioButton
        android:id="@+id/radioButtonSortByDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sắp xếp theo năm sinh"/>

    <RadioButton
        android:id="@+id/radioButtonSortBystartlearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sắp xếp theo năm nhập học"/>
</RadioGroup>
